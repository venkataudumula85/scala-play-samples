/* uses sbt, which i installed with homebrew. */
/* this works without requiring the 'sbt plugin'. */

pipeline {
    agent any

    stages {

        stage('Compile') {
            steps {
                echo "Compiling..."
                sh "sbt sbtVersion"
            }
        }

        stage('Package') {
            steps {
                
                echo "Packaging..."
                sh "sbt rpm:packageBin"
            }
        }
    }
}
